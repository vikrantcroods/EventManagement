<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/card_text_top">

    <TextView
        android:id="@+id/lbl_stoe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_text_top"
        android:background="@drawable/round_edittext"
        android:foregroundGravity="fill"
        android:gravity="center"
        android:padding="@dimen/margin_six_dp"
        android:text="Send material to Event" />

    <TextView
        android:id="@+id/lbl_rtoe"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_text_top"
        android:background="@drawable/round_edittext"
        android:foregroundGravity="fill"
        android:gravity="center"
        android:padding="@dimen/margin_six_dp"
        android:text="Received material to Event" />

    <TextView
        android:id="@+id/lbl_rtow"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_text_top"
        android:background="@drawable/round_edittext"
        android:foregroundGravity="fill"
        android:gravity="center"
        android:padding="@dimen/margin_six_dp"
        android:text="Received material to warehouse" />

</LinearLayout>
