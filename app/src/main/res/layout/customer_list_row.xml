<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_laptop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/home_cardview"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/text_margin">

            <TextView
                android:id="@+id/lbl_cname"
                style="@style/font_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_text_side"
                android:layout_marginTop="@dimen/setting_top"
                android:text="VIKRANT PATEL" />

            <TextView
                android:id="@+id/lbl_cmob"
                style="@style/regular_font"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_cname"
                android:layout_marginStart="@dimen/home_text_side"
                android:layout_marginTop="@dimen/setting_top"
                android:layout_marginEnd="@dimen/home_text_side"
                android:drawableStart="@mipmap/phone"
                android:gravity="fill"
                android:text=" 4545454545" />

            <TextView
                android:id="@+id/lbl_ccity"
                style="@style/regular_font"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_cname"
                android:layout_marginStart="@dimen/home_text_side"
                android:layout_marginTop="@dimen/setting_top"
                android:layout_marginEnd="@dimen/home_text_side"
                android:drawableStart="@mipmap/location"
                android:gravity="fill"
                android:text=" Ahmedabad" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
