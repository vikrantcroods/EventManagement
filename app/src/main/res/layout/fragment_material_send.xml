<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MaterialSendFragment">

    <TextView
        android:id="@+id/txt_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select JobCode"
        style="@style/regular_font_home"
        android:textColor="@color/action_menu_text_color"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spn_send_event"
        android:layout_below="@+id/txt_label"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="@dimen/text_margin"
        android:background="@drawable/spinner_back" />


    <ListView
        android:id="@+id/lst_material_send"
        android:layout_below="@+id/spn_send_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/setting_top"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:layout_marginStart="@dimen/card_text_top"
        android:layout_marginEnd="@dimen/card_text_top"
        />

</RelativeLayout>