<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/action_menu_text_color</item>
        <item name="colorPrimaryDark">@color/action_menu_text_color</item>
        <item name="colorAccent">@color/action_menu_text_color</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionMenuTextColor">@color/action_menu_text_color</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">@color/black</item>
    </style>

    <style name="ActionButtonOverflowStyle">
        <item name="android:color">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_font">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_regular_font</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="regular_font_send">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_regular_font</item>
        <item name="android:textAlignment">inherit</item>
    </style>

    <style name="regular_font_two">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="miduam_font">
        <item name="android:font" tools:targetApi="o">@font/sarabunbold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="miduam_font_two">
        <item name="android:font" tools:targetApi="o">@font/sarabunmedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/action_menu_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular_font_home">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_regular_font</item>
    </style>

    <style name="font_semi_bold">
        <item name="android:font" tools:targetApi="o">@font/sarabunsemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="history_card_text_label">
        <item name="android:font" tools:targetApi="o">@font/sarabunmedium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_regular_font</item>
    </style>
    <style name="history_card_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunmedium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="history_card_status">
        <item name="android:font" tools:targetApi="o">@font/sarabunmedium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/status_font</item>
    </style>

    <style name="cancel_amount">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/action_menu_text_color</item>
    </style>

    <style name="setting_font">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_black_font">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_white_font">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="radio_button_theme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="datepicker" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/action_menu_text_color</item>
        <item name="colorPrimaryDark">@color/action_menu_text_color</item>
        <item name="colorAccent">@color/action_menu_text_color</item>

        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="tab_text">
        <item name="android:font" tools:targetApi="o">@font/sarabunregular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_regular_font</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/show_animation</item>
        <item name="fab_hideAnimation">@anim/hide_animation</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>



</resources>
